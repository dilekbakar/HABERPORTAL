
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h3> <header class="panel panel-default">@ViewBag.Title</header></h3>
    <form>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="inputEmail3">Kategori Adı</label>
            <div class="col-sm-10">

                <select class="form-select col-sm-10 col-form-label form-control" aria-label="Default select example">
                    <option selected>Seçiniz</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>

                </select>

            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="inputPassword3">Kategori Adı</label>
            <div class="col-sm-10">
                <input class="form-control" id="kategoriAdi" placeholder="Kategori Adı" type="text">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="inputPassword3">Kategori URL</label>
            <div class="col-sm-10">
                <input class="form-control" id="kategoriUrl" placeholder="Url" type="text">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <div class="form-check">
                    <input class="form-check-input" id="gridAktif" type="checkbox" checked>
                    <label class="form-check-label" for="gridCheck1">Aktif Mi?</label>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-primary" type="submit">Kaydet</button>
            </div>
        </div>
    </form>
</div>